@model ArticleDeleteVm

<h3 class="mb-3">Vill du radera denna artikel?</h3>
<hr />
<div>
    <h4>Artikel</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Namn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Name)
        </dd>

        <dt class="col-sm-2">
            Beskrivning
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Description)
        </dd>

        <dt class="col-sm-2">
            Pris
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Price)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Article.Id" />
        <input type="hidden" asp-for="Previous">
        <a href="/Home" class="btn btn-primary">Tillbaka till profil</a>
        <input type="submit" value="Radera" class="btn btn-danger" />
    </form>
</div>