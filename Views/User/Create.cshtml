@model UsersCreateVm

<div class="card shadow-sm rounded">
    <div class="card-body">
        <h1>Skapa användare</h1>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Email" class="form-label">✉️ E-post:</label>
                <input type="text" asp-for="Email" class="form-control" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlainPassword">🗝️ Lösenord:</label>
                <input type="text" asp-for="PlainPassword" class="form-control" required>
                <span asp-validation-for="PlainPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" value="Create" class="btn btn-primary">Registrera</button>
            </div>
        </form>
    </div>
</div>
