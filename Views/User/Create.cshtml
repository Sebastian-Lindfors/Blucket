@model UsersCreateVm

<h1>Create User</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Email" class="form-label">Email:</label>
        <input type="text" asp-for="Email" class="form-control" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlainPassword">Password:</label>
        <input type="text" asp-for="PlainPassword" class="form-control" required>
        <span asp-validation-for="PlainPassword" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" value="Create" class="btn btn-primary">Create user</button>
    </div>
</form>