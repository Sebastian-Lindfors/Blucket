@page
@model LogoutModel
@{
    ViewData["Title"] = "Logga ut från Blucket";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="col-md-6 text-center">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="mb-3">@ViewData["Title"]</h1>
                @{
                    if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <p class="lead">Är du säker på att du vill logga ut?</p>

                        <div class="d-flex justify-content-center gap-1">
                            <a href="/" class="btn btn-primary ">Gå tillbaka till startsidan</a>

                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                                asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="btn btn-danger">Jag vill logga ut</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <p class="lead">Du har nu framgångsrikt loggat ut från Blucket.</p>
                        <a href="/" class="btn btn-primary btn-lg">Gå tillbaka till startsidan</a>
                    }
                }
            </div>
        </div>
    </div>
</div>
