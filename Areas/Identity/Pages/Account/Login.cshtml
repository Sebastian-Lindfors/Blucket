@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <section class="card p-4 shadow-sm">
                <h2 class="text-center mb-2">@ViewData["Title"]</h2>
                <p class="text-center">Välkommen tillbaka till Blucket</p>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">📧 Användarnamn</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username"
                            placeholder="name@example.com" required />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">🔑 Lösenord</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                            placeholder="Skriv in ditt lösenord.." required />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Kom ihåg mig</label>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Logga in</button>
                    </div>

                    <div class="text-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Glömt lösenord?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrera nytt konto</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Skicka bekräftelsemejl
                                igen</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
