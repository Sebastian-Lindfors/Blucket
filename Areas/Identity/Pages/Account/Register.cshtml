@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrera dig";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <section class="card p-4 shadow-sm">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">E-postadress</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username"
                            placeholder="namn@exempel.com" required />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Lösenord</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password"
                            placeholder="Lösenord" required />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Bekräfta lösenord</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                            placeholder="Bekräfta lösenord" required />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Registrera</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
